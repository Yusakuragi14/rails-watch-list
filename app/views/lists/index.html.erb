<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Lists</h1>
      <%= link_to 'New List', new_list_path, class: 'btn btn-primary' %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @lists.each do |list| %>
            <tr>
              <td><%= list.name %></td>
              <td>
                <%= link_to 'Show', lists_path(list), class: 'btn btn-info' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
